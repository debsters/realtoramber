<h1>Listings Index Page</h1>

<h1>Hello, <%= current_user.username %></h1>
<h2>Recent Listings</h2>
<br><br>

<div class="container-fluid bg-3 text-center">
  <% @listings.each do |listing| %>
  <div class="row">
    <div class="col-sm-3">
      <a href="/users/<%= listing.user.id %>"><%= listing.user.username%></a>
      <img class="house-pic" src="/images/listing/<%= listing.photos.first.name%>">
      <a href="/posts/<%= listing.id%>"><%= listing.content %></a><br><br>
    </div>
  <% end %>
</div><br>