      <% require 'pry' %>

<div class="wrapper-main-page width-entries">
  <div class="container container-amber">
    <div class="row">
        <div class="col-sm text-center">
          <img class="amber-pic" src="/images/profile/ProfilePic.png">
        </div>
    </div>
  </div>
  <div class="container container-deb">

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% @listings.each_with_index do |item, i| %>
       
          <% if i == 0 %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<% i %>" class="active"></li>
          <% else %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<% i %>"></li>
          <% end %>
        <% end %>
      </ol>
      <div class="carousel-inner">
        <% @listings.each_with_index do |item, i| %>
        <% if i == 0 %>
        <div class="carousel-item active">
          <img class="d-block w-100 house-pic" src="/images/listing/<%= item.photos.first.name%>">
        </div>
        <% else %>
        <div class="carousel-item">
          <img class="d-block w-100 house-pic" src="/images/listing/<%= item.photos.first.name%>">
        </div>
        <% end %>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>






    <div class="row">
      <% @listings.each do |listing| %>
        <div class="col-sm text-center">
          <img class="house-pic" src="/images/listing/<%= listing.photos.first.name%>">
        </div>
      <% end %>
    </div>
    <div class="row">
      <% @listings.each do |listing| %>
        <div class="col-sm text-center">
          <a href="/posts/<%= listing.id%>"><%= listing.content %></a>
        </div>
      <% end %>
    </div>
  </div>
</div>