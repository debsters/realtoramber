<html lang="en">

  <head>
    <!-- SEO goodies, Meta Tags -->
    <meta charset="UTF-8">
    <meta name="description" content="AmberHookway">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Reset to normalize appearance of elements across browsers -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/4.2.0/normalize.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
   
    <!-- Bootstrap JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
	  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.21.0/moment.min.js" type="text/javascript"></script> 

    <!-- Font/Icons CSS -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.1/css/all.css" integrity="sha384-xxzQGERXS00kBmZW/6qxqJPyxW3UR0BPsL4c8ILaIWXva5kFi7TxkIIaMiKtqV1Q" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:500,700&amp;display=swap">

    <!-- Summernote WYSIWIG Editor For Content (Text Box For Entries) -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote-bs4.min.css" rel="stylesheet">

    <!-- Our styles -->
    <link rel="stylesheet" href="/stylesheets/main.css">

    <title><%= @title %></title>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-primary">
        <a class="navbar-brand" href="/">Amber Hookway</a>
        <% if logged_in? %>
        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <% end %>
        <div class="navbar-collapse collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <% if logged_in? %>
              <li class="nav-item <% if request.path_info.include?("edit") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/registrations/<%= current_user.id %>/edit">About Me<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item <% if request.path_info.include?("medications") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/medications">My Recent Listings<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item <% if request.path_info.include?("list") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/list/<%= current_user.id %>">Contact Me<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item <% if request.path_info.include?("entries") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/entries">Testimonials<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item <% if request.path_info.include?("statistics") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/statistics">Sold<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item <% if request.path_info.include?("statistics") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/statistics">Buyers<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item <% if request.path_info.include?("statistics") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/statistics">Sellers<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            <% else %>
              <li class="nav-item <% if request.path_info.include?("edit") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/registrations/edit">About Me<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item <% if request.path_info.include?("medications") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/medications">My Recent Listings<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item <% if request.path_info.include?("list") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/list">Contact Me<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item <% if request.path_info.include?("entries") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/entries">Testimonials<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item <% if request.path_info.include?("statistics") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/statistics">Sold<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item <% if request.path_info.include?("statistics") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/statistics">Buyers<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item <% if request.path_info.include?("statistics") %><%= 'active' %><% end %>">
                <a class="nav-link" href="/statistics">Sellers<span class="sr-only">(current)</span></a>
              </li>
            <% end %>

          </ul>
        </div>
      </nav>
    </header>

    <!-- ----- -->
    <div class="container-fluid">
      <br>
      <%= yield %>
      <div class="push"></div>
    </div>
      <div class="push"></div> 

    <footer class="branding fixed-bottom">
  
    </footer>

  </body>

  

</html>


<!-- Summernote WYSIWYG Editor Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote-bs4.min.js"></script>
<script>
  $(document).ready(function() {
      $('#summernote').summernote({
        height: 200
      });
  });
</script>

<script>
  $(document).ready(function() {
      $('#summernote-entry').summernote({
        height: 200,
        toolbar: false
      });
      $('#summernote-entry').summernote('disable');
  });
</script>


