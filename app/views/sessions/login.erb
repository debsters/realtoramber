<form action="/sessions" method="POST">
  <fieldset>
    <div class="form-group">
      <label for="username" class="d-none">Username:</label>
      <input type="text" class="form-control neumorphism-input" id="username" name="username" placeholder="Username" required="required">
    </div>
    <div class="form-group">
      <label for="pwd" class="d-none">Password: </label>
      <input type="password" class="form-control neumorphism-input " id="pwd" name="password" aria-describedby="pwdHelp" placeholder="Password" required="required">
    </div>     
    <div class="form-group">
      <button type="submit" class="btn btn-form-sessions btn-block btn-lg login-btn"><i class="icon fa fa-lock" aria-hidden="true"></i> Log In</button>
    </div>	
  </fieldset>
</form>